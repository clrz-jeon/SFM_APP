<core:FragmentDefinition
      xmlns="sap.m"
      xmlns:core="sap.ui.core">

  <Dialog id="dlgAddFilter"
          title="Define filter characteristics"
          draggable="true"
          resizable="true"
          contentWidth="45rem"
          contentHeight="auto"
          afterClose="onFilterDialogClose"
          >

    <VBox id="_IDGenVBox5">
      <Table
          id="tblAdd"
          inset="false"
          width="100%"
          showSeparators="None">
        <columns>
          <Column id="_IDGenColumn15"><Text id="_IDGenText29" text="Characteristic"/></Column>
          <Column id="_IDGenColumn16"><Text id="_IDGenText34" text="Operator"/></Column>
          <Column id="_IDGenColumn17"><Text id="_IDGenText35" text="Values"/></Column>
          <Column id="_IDGenColumn18"><Text id="_IDGenText36" text="Value UoM"/></Column>
        </columns>
        <items>
          <ColumnListItem id="_IDGenColumnListItem3">
            <cells>
              <Select id="selCharacteristic" class="select"
                      selectedKey=""        
                      width="100%">
                <core:Item id="_IDGenItem24" key="" text="Select characteristic to apply" />
                <core:Item id="_IDGenItem25" key="Product" text="Product"/>
                <core:Item id="_IDGenItem26" key="ProductGroup" text="Product group"/>
              </Select>

              <Select id="selOperator" class="select"
                      selectedKey=""
                      width="100%">
                <core:Item id="_IDGenItem27" key="" text="Select operator"/>
                <core:Item id="_IDGenItem28" key="EQ" text="Equal to"/>
              </Select>

              <Select id= "inpValue" class="select"
                      selectedKey=""
                      width="100%" >
                <core:Item id="_IDGenItem15" key="" text="Select 1" />
                <core:Item id="_IDGenItem16" key="VAL" text="All" />    
              </Select>


              <Select id="selUoM" 
                      selectedKey=""
                      width="100%">
                <core:Item id="_IDGenItem31" key="NA" text="Not applicable"/>
              </Select>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </VBox>

    <endButton>
      <Button id="_IDGenButton13" text="Cancel" type="Transparent"
              press="onCancelAddFilter"/>
    </endButton>

    <beginButton>
      <Button id="_IDGenButton14" text="Add" type="Emphasized"
              press="onConfirmAddFilter"/>
    </beginButton>

  </Dialog>
</core:FragmentDefinition>
